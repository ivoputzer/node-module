#!/usr/bin/env bash

echo "-- compiling ecmascript6 assets!"
babel --ignore node_modules -x .es -d . . 1>/dev/null || exit 1
find . -name "*.es" -not -path "./node_modules/*"

echo "-- compiling coffee-script assets!"
coffee --no-header --compile --bare --output . . 1>/dev/null || exit 1
find . -name "*.coffee" -not -path "./node_modules/*"

exit 0
