{
  "name": "node-module",
  "version": "1.0.1",
  "description": "node.js module boilerplate",
  "main": "main.js",
  "private": false,
  "scripts": {
    "clean": "rm -rf $(find . -name \"*.js\" -not -path \"./node_modules/*\")",
    "preversion": "npm test",
    "version": "npm build",
    "postversion": "git push origin master && git push origin --tags && npm run clean",
    "prepublish": "git fetch --tags && git checkout $(git describe --tags `git rev-list --tags --max-count=1`)",
    "postpublish": "git checkout master",
    "build": "npm run build:babel && npm run build:coffee && npm run build:test",
    "build:babel": "babel --ignore node_modules -x .es -d . .",
    "build:coffee": "coffee --no-header --compile --bare --output . .",
    "build:test": "mocha --require opt/mocha/helpers --bail --colors --check-leaks $(find src/test -name \"*.js\" -not -path \"./node_modules/*\")",
    "test": "mocha --recursive src/test --compilers coffee:coffee-script/register,es:babel/register --require opt/mocha/helpers --colors --check-leaks",
    "test:watch": "npm run test -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ivoputzer/node-module.git"
  },
  "keywords": [
    "node",
    "modules",
    "boilerplate",
    "coffee-script"
  ],
  "author": "Ivo von Putzer Reibegg <ivo.putzer@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivoputzer/node-module/issues"
  },
  "homepage": "https://github.com/ivoputzer/node-module",
  "devDependencies": {
    "babel": "^5.8.23",
    "coffee-script": "^1.10.0",
    "expect.js": "^0.3.1",
    "mocha": "^2.3.2"
  }
}
